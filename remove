# Change registry to workgroup
reg add "HKLM\SYSTEM\CurrentControlSet\Services\Tcpip\Parameters" /v Domain /t REG_SZ /d "" /f
reg add "HKLM\SYSTEM\CurrentControlSet\Control\ComputerName\ComputerName" /v ComputerName /t REG_SZ /d "DESKTOP-J91LK26" /f

# Restart
Restart-Computer -Force

# Force remove from domain without contacting DC
$credential = Get-Credential -Message "Enter local admin credentials"
Remove-Computer -UnjoinDomainCredential $credential -WorkgroupName "WORKGROUP" -Force -Restart


# Create student user
sudo useradd -m -s /bin/bash CBU_STUDENT_202
echo "CBU_STUDENT_202:L@ncerN@tion" | sudo chpasswd

# Add to sudoers (optional, if you want them to have admin access)
sudo usermod -aG wheel CBU_STUDENT_202

# Enable SSH (should already be enabled)
sudo systemctl enable sshd
sudo systemctl start sshd

# Allow SSH through firewall if firewalld is running
sudo firewall-cmd --permanent --add-service=ssh 2>/dev/null
sudo firewall-cmd --reload 2>/dev/null

# Verify user was created
id CBU_STUDENT_202
